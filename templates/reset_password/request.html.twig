    {% endfor %}
    <h1 style="text-align: center">Reinitialiser le mot de passe</h1>
    <div style="text-align: center">
        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}

        <div style="text-align: center">
            <small>
                Entrez votre Adresse Mail, un lien vous sera envoyer pour r√©initliser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer le Mail</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}