<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Reggae+One&family=Sulphur+Point:wght@300;400;700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <link href="{{ asset('style.css') }}" type="text/css" rel="stylesheet">

    {% endblock %}

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous">
    </script>


    {% block javascripts %}

    {% endblock %}
</head>
<body>
<header>
    <div class="navbar" style="background-color: #f7a431;">
        <div class="container">
            <a href="{{ path('default') }}" class="navbar-brand d-flex align-items-center">
                <img id="gif" src="{{ asset('images/gamelle.gif') }}">
            </a>

            <h3 style="text-align: center; color: white; margin-top: 10px; margin-left: 200px">La voie du Chamouraï</h3>

            <span class="text-white">

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    Bonjour,  <a style="color: #FFFFFF" href="{{ path('user_profil') }}">{{ app.user.pseudo }}</a> <a class="btn btn-outline-light my-2 my-sm-0" href="{{ path('app_logout') }}"> Déconnexion</a>
                {% else %}
                    <a class="btn btn-outline-light my-2 my-sm-0" style=" text-decoration: none;" href="{{ path('app_register') }}">Inscription</a>
                    <a class="btn btn-outline-light my-2 my-sm-0" style=" text-decoration: none;" href="{{ path('app_login') }}">Connexion</a>
                    <a class="btn btn-outline-light my-2 my-sm-0" style=" text-decoration: none;" href="{{ path('admin') }}">Back-Office</a>
                {% endif %}
                    </span>
        </div>
    </div>
</header>
<main class="container">
    {% block body %}{% endblock %}
</main>

<footer>

    <img id="logo" src="{{ asset('images/bg.png') }}">


</footer>

</body>
</html>
